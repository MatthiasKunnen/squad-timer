{
    "name": "website",
    "version": "0.0.0",
    "scripts": {
        "build": "run-s build:env build:angular build:nginx",
        "build:angular": "ng build --configuration $ENV",
        "build:env": "ts-node --transpile-only --project build/tsconfig.json build/generate-environment.ts",
        "build:nginx": "ts-node --transpile-only --project build/tsconfig.json build/nginx.conf.ts --configuration $ENV > dist/nginx.conf",
        "build:production": "ENV=production yarn run build",
        "compile:ts": "tsc -p tsconfig.app.strict.json",
        "docker:build": "docker buildx build . -f ./Dockerfile --build-arg REVISION=$(git rev-parse HEAD)",
        "docker:build-and-run": "docker run -it -p 127.0.0.1:8080:80/tcp $(yarn run docker:build -q)",
        "lint": "npm-run-all -cp \"lint:css {@}\" \"lint:ts {@}\" -- ",
        "lint:css": "stylelint \"src/**/*.scss\"",
        "lint:ts": "eslint \"src/**/*.{html,ts}\"  \"build/**/*.ts\"",
        "ng": "ng",
        "start": "ng serve",
        "test": "yarn run compile:ts"
    },
    "private": true,
    "dependencies": {
        "@angular-devkit/build-angular": "^16.1.3",
        "@angular/animations": "^16.1.3",
        "@angular/cdk": "16.1.3",
        "@angular/cli": "^16.1.3",
        "@angular/common": "^16.1.3",
        "@angular/compiler": "^16.1.3",
        "@angular/compiler-cli": "^16.1.3",
        "@angular/core": "^16.1.3",
        "@angular/forms": "^16.1.3",
        "@angular/language-service": "^16.1.3",
        "@angular/material": "^16.1.3",
        "@angular/platform-browser": "^16.1.3",
        "@angular/platform-browser-dynamic": "^16.1.3",
        "@angular/router": "^16.1.3",
        "@angular/service-worker": "^16.1.3",
        "@sentry/browser": "^5.19.1",
        "@sentry/integrations": "^5.19.1",
        "@types/argparse": "^1.0.0",
        "@types/node": "^18.16.18",
        "angular-error-repository": "^2.0.0",
        "angular-svg-icon": "^16.0.0",
        "argparse": "^1.0.0",
        "date-fns": "^2.16.1",
        "decoverto": "^2.0.0",
        "ngx-toastr": "^17.0.2",
        "npm-run-all": "^4.1.5",
        "reflect-metadata": "^0.1.13",
        "rxjs": "^7.8.1",
        "shared": "workspace:^",
        "ts-node": "~7.0.0",
        "tslib": "^2.3.1",
        "typescript": "~5.0.4",
        "zone.js": "~0.13.0"
    },
    "devDependencies": {
        "@matthiaskunnen/eslint-config-angular": "^16.0.0",
        "@matthiaskunnen/eslint-config-typescript-node": "^5.0.0",
        "eslint": "~8.39.0",
        "npm-run-all": "^4.1.5",
        "postcss": "^8.4.5",
        "postcss-scss": "^4.0.2",
        "stylelint": "^14.2.0",
        "stylelint-config-standard-scss": "^3.0.0",
        "stylelint-order": "^3.1.1"
    },
    "engines": {
        "node": "^18.16.0",
        "yarn": "3.5.1"
    }
}
