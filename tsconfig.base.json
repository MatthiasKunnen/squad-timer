{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": "./",
        "declaration": false,
        "downlevelIteration": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "lib": [
            "ES2022",
            "dom",
        ],
        "module": "ES2022",
        "moduleResolution": "node",
        "noImplicitAny": true,
        "outDir": "./dist/out-tsc",
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
    }
}
