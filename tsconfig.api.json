{
    "compileOnSave": false,
    "compilerOptions": {
        "alwaysStrict": true,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "lib": [
            "es2016",
            "es2017",
            "es2018",
            "es2019",
            "es2020.string",
            "esnext.asynciterable"
        ],
        "module": "CommonJS",
        "moduleResolution": "node",
        "noEmit": true,
        "noImplicitAny": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "strictPropertyInitialization": false,
        "target": "es2019"
    },
    "files": [
        "api/server.ts"
    ]
}
